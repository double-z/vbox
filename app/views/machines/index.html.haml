%div{:style=>"float:left;width:47%;"}
  -form_tag(machines_path, :method=>:post) do
    =text_field_tag :name
    =submit_tag "Create VM"
  %h2 Machines
  -@machines.each do |machine|
    =render :partial=>"machines/machine", :locals=>{:machine=>machine}
%div{:style=>"float:right;width:47%"}
  %h2 ISOs
  %ul
    -@isos.each do |iso|
      %li=iso 
  %h2 Drives
  -form_tag(drives_path, :method=>:post) do
    =text_field_tag :name
    =submit_tag "Create Drive"
  -@drives.each do |drive|
    =render :partial=>"drives/drive", :locals=>{:drive=>drive}
